<table>
  <thead>
    <tr>
      <th>Dept</th>
      <th>Org</th>
      <th>Name</th>
      <th>Sales rep</th>
      <th>Confirmed date</th>
      <% 12.times do |i| %>
        <th><%= (@start_date + i.month).month %></th>
        <th></th>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.dept %></td>
        <td><%= worker.org %></td>
        <td><%= worker.name %></td>
        <td><%= worker.sales_rep %></td>
        <td><%= worker.confirmed_date %></td>
        <% 12.times do |i| %>
          <% 4.times do |j| %>
            <td><%= '*' if worker.is_assigned?(@start_date + i.month + j.week) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

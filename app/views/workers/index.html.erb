<h1>Listing workers</h1>

<table>
  <thead>
    <tr>
      <th>Dept</th>
      <th>Org</th>
      <th>Name</th>
      <th>Sales rep</th>
      <th>Confirmed date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.dept %></td>
        <td><%= worker.org %></td>
        <td><%= worker.name %></td>
        <td><%= worker.sales_rep %></td>
        <td><%= worker.confirmed_date %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

